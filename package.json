{
  "name": "@item-enonic-types/lib-blocks",
  "description": "Item Blocks",
  "version": "0.0.3",
  "homepage": "https://github.com/ItemConsulting/lib-xp-item-blocks",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist/site/mixins/**/*.d.ts",
    "dist/*.css",
    "tsconfig.json"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ItemConsulting/lib-xp-item-blocks.git"
  },
  "scripts": {
    "clean": "rimraf build",
    "build": "concurrently -c auto -g --timings npm:build:*",
    "minify": "concurrently -c auto -g --timings 'npm:build:browser -- --minify' npm:build:sass 'npm:build:server -- --minify' 'npm:build:static -- --minify'",
    "build:asset": "npx tsup -d build/resources/main/assets",
    "build:postcss": "npx postcss src/main/resources/assets/styles/blocks-all.css -o src/main/resources/assets/styles/blocks-all.min.css && mv src/main/resources/assets/styles/blocks-all.min.css build/resources/main/assets/styles/blocks-all.min.css",
    "build:server": "npx tsup -d build/resources/main",
    "check": "concurrently -c auto -g --timings npm:lint npm:check:types",
    "check:types": "concurrently -g -r --timings npm:check:types:*",
    "check:types:asset": "npx tsc --noEmit -p src/main/resources/assets/tsconfig.json",
    "check:types:server": "npx tsc --noEmit",
    "lint": "eslint --cache 'src/main/resources/**/*.ts'",
    "prepublishOnly": "concurrently -c auto -g --timings npm:prepublish:*",
    "prepublish:types": "tsc --declaration true --emitDeclarationOnly true --declarationDir build/types && cp -r build/types/src/main/resources/site dist",
    "prepublish:styles": "mkdir -p dist && cp src/main/resources/assets/styles/blocks/*.css dist",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "devDependencies": {
    "@enonic-types/core": "^7",
    "@enonic-types/global": "^7",
    "@enonic-types/lib-auth": "^7",
    "@enonic-types/lib-common": "^7",
    "@enonic-types/lib-content": "^7",
    "@enonic-types/lib-context": "^7",
    "@enonic-types/lib-event": "^7",
    "@enonic-types/lib-i18n": "^7",
    "@enonic-types/lib-io": "^7",
    "@enonic-types/lib-node": "^7",
    "@enonic-types/lib-portal": "^7",
    "@enonic-types/lib-repo": "^7",
    "@enonic-types/lib-scheduler": "^7",
    "@enonic-types/lib-task": "^7",
    "@enonic-types/lib-value": "^7",
    "@enonic-types/lib-websocket": "^7",
    "@enonic/esbuild-plugin-copy-with-hash": "^0.2.0",
    "@enonic/tsup-plugin-manifest": "^0.0.1",
    "@item-enonic-types/global": "^7.13.1",
    "@item-enonic-types/lib-freemarker": "^2.0.2",
    "@item-enonic-types/lib-http-client": "^3.2.1",
    "@item-enonic-types/lib-menu": "^4.2.1",
    "@item-enonic-types/lib-time": "^1.0.4",
    "@item-enonic-types/lib-turbo-streams": "^1.1.2",
    "@itemconsulting/preset-enonic-xp": "^0.0.3",
    "@itemconsulting/xp-storybook-utils": "^0.0.5",
    "@storybook/addon-a11y": "^8.3.0",
    "@storybook/addon-essentials": "^8.3.0",
    "@storybook/addon-links": "^8.3.0",
    "@storybook/addon-webpack5-compiler-swc": "^1.0.5",
    "@storybook/blocks": "^8.3.0",
    "@storybook/server": "^8.3.0",
    "@storybook/server-webpack5": "^8.3.0",
    "@storybook/test": "^8.3.0",
    "@swc/core": "^1.7.26",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9",
    "cssnano": "^7.0.6",
    "esbuild-plugin-globals": "^0.2.0",
    "eslint": "^9.10.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "glob": "^11.0.0",
    "globals": "^15.9.0",
    "postcss": "^8.4.45",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.1.0",
    "postcss-loader": "^8.1.1",
    "postcss-nesting": "^13.0.0",
    "postcss-normalize": "^13.0.0",
    "postcss-reporter": "^7.1.0",
    "postcss-url": "^10.1.3",
    "prettier": "^3.3.3",
    "q-i": "^2",
    "rimraf": "^6",
    "storybook": "^8.3.0",
    "stylelint": "^16.9.0",
    "stylelint-config-standard": "^36.0.1",
    "stylelint-order": "^6.0.4",
    "tsup": "^8.2.4",
    "typescript": "^5.6.2",
    "typescript-eslint": "^8.5.0"
  },
  "dependencies": {
    "@itemconsulting/details-animated": "^0.0.6",
    "@itemconsulting/popover-gallery": "^0.2.1"
  }
}
