<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<mixin xmlns="urn:enonic:xp:model:1.0">
  <display-name i18n="mixin.blocks.card.displayName">Card</display-name>

  <form>
    <input type="TextLine" name="title">
      <label i18n="mixin.blocks.card.overwriteTitle">Title</label>
      <help-text i18n="mixin.blocks.card.overwriteTitleHelpText">Use this field if you don't want to use the title from the content</help-text>
      <occurrences minimum="0" maximum="1"/>
    </input>

    <mixin name="blocks-link" />

    <input type="TextLine" name="kicker">
      <label i18n="mixin.blocks.card.kicker">Kicker</label>
      <occurrences minimum="0" maximum="1"/>
    </input>

    <input type="TextArea" name="text">
      <label i18n="mixin.blocks.card.text">Text</label>
      <occurrences minimum="0" maximum="1"/>
    </input>

    <input name="imageId" type="ImageSelector">
      <label i18n="mixin.blocks.card.image">Image</label>
      <occurrences minimum="0" maximum="1"/>
    </input>
  </form>
</mixin>
