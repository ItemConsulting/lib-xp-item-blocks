<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<mixin xmlns="urn:enonic:xp:model:1.0">
  <display-name i18n="mixin.blocks-quote.displayName">Quote</display-name>
  <description i18n="mixin.blocks-quote.description">A stylized quote with the image of the author</description>

  <form>
    <input name="text" type="HtmlArea">
      <label i18n="mixin.blocks-quote.text">Text</label>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <exclude>*</exclude>
        <include>Bold Italic Strike RemoveFormat | BulletedList NumberedList | Subscript Superscript | SpecialChar Link Unlink</include>
      </config>
    </input>

    <input name="author" type="TextLine">
      <label i18n="mixin.blocks-quote.author">Name of person quoted</label>
      <occurrences minimum="0" maximum="1"/>
    </input>

    <input name="imageId" type="ImageSelector">
      <label i18n="mixin.blocks-quote.image">Author Image</label>
      <occurrences minimum="0" maximum="1"/>
    </input>

    <input name="publicationTitle" type="TextLine">
      <label i18n="mixin.blocks-quote.publicationTitle">Title</label>
      <occurrences minimum="0" maximum="1"/>
    </input>

    <input name="publicationUrl" type="TextLine">
      <label i18n="mixin.blocks-quote.publicationUrl">Url</label>
      <occurrences minimum="0" maximum="1"/>
      <config>
        <regexp>https?:\/\/(www\.)?[-a-zA-Z0-9@:%._\+~#=]{1,256}\.[a-zA-Z0-9()]{1,6}\b([-a-zA-Z0-9()!@:%_\+.~#?&amp;\/\/=]*)</regexp>
      </config>
    </input>
  </form>
</mixin>
