<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<mixin xmlns="urn:enonic:xp:model:1.0">
  <display-name i18n="mixin.blocks.cards.displayName">Cards</display-name>

  <form>
    <input name="title" type="TextLine">
      <label i18n="mixin.blocks.cards.title">Image</label>
      <occurrences minimum="0" maximum="1"/>
    </input>

    <mixin name="blocks-theme" />

    <input name="imagePosition" type="ComboBox">
      <label i18n="mixin.blocks.cards.imagePosition">Image placement</label>
      <occurrences minimum="1" maximum="1"/>
      <default>right</default>
      <config>
        <option value="top">Topp</option>
        <option value="bottom">Bunn</option>
        <option value="left">Venstre</option>
        <option value="right">HÃ¸yre</option>
      </config>
    </input>

    <item-set name="items">
      <label i18n="mixin.blocks.cards.displayName">Cards</label>
      <occurrences minimum="1" maximum="0"/>
      <items>
        <mixin name="link" />

        <input type="TextLine" name="title">
          <label i18n="mixin.blocks.cards.overwriteTitle">Overwrite title</label>
          <occurrences minimum="0" maximum="1"/>
        </input>

        <input type="TextArea" name="intro">
          <label i18n="mixin.blocks.cards.intro">Intro</label>
          <occurrences minimum="0" maximum="1"/>
        </input>

        <input name="imageId" type="ImageSelector">
          <label i18n="mixin.blocks.cards.image">Image</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
      </items>
    </item-set>
  </form>
</mixin>
