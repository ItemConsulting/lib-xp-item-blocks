<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<mixin xmlns="urn:enonic:xp:model:1.0">
  <display-name i18n="mixin.blocks-cards.displayName">Cards</display-name>
  <description i18n="mixin.blocks-cards.description">Cards can have a title, text, image and can link to content</description>

  <form>
    <input name="title" type="TextLine">
      <label i18n="mixin.blocks-cards.title">Title</label>
      <occurrences minimum="0" maximum="1"/>
    </input>

    <mixin name="blocks-image-placement" />

    <input name="columnsClass" type="RadioButton">
      <label i18n="mixin.blocks-cards.columnsClass">Column count</label>
      <occurrences minimum="1" maximum="1"/>
      <default>blocks-card--cols-3</default>
      <config>
        <option value="blocks-card--cols-1">1</option>
        <option value="blocks-card--cols-2">2</option>
        <option value="blocks-card--cols-3">3</option>
      </config>
    </input>

    <item-set name="items">
      <label i18n="mixin.blocks-cards.cards">Cards</label>
      <occurrences minimum="1" maximum="0"/>
      <items>
        <mixin name="blocks-card" />
        <mixin name="blocks-theme" />
      </items>
    </item-set>
  </form>
</mixin>
