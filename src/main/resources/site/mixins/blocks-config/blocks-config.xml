<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<mixin xmlns="urn:enonic:xp:model:1.0">
  <display-name i18n="mixin.blocks-config.displayName">Blocks Config</display-name>
  <description i18n="mixin.blocks-config.description">Configurations for blocks that should be added to a page component</description>

  <form>
    <input name="gapRow" type="ComboBox">
      <label i18n="mixin.blocks-config.gapRow">Vertical spacing</label>
      <occurrences minimum="0" maximum="1"/>
      <config>
        <option value="sm" i18n="mixin.blocks-config.gapRow.sm">Small</option>
        <option value="md" i18n="mixin.blocks-config.gapRow.md">Medium</option>
        <option value="lg" i18n="mixin.blocks-config.gapRow.lg">Large</option>
        <option value="xl" i18n="mixin.blocks-config.gapRow.xl">XL</option>
        <option value="xxl" i18n="mixin.blocks-config.gapRow.xxl">XXL</option>
        <option value="none" i18n="mixin.blocks-config.gapRow.none">None</option>
      </config>
      <default>md</default>
    </input>

    <input name="blockWidth" type="RadioButton">
      <label i18n="mixin.blocks-config.blockWidth">Block Width</label>
      <occurrences minimum="0" maximum="1"/>
      <config>
        <option value="content" i18n="mixin.blocks-config.blockWidth.content">Content</option>
        <option value="wide" i18n="mixin.blocks-config.blockWidth.wide">Wide</option>
      </config>
      <default>content</default>
    </input>
  </form>
</mixin>
