<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<mixin xmlns="urn:enonic:xp:model:1.0">
  <display-name i18n="mixin.blocks-config.displayName">Blocks Config</display-name>
  <description i18n="mixin.blocks-config.description">Configurations for blocks that should be added to a page component</description>

  <form>
    <input name="blockLayout" type="RadioButton">
      <label i18n="mixin.blocks-config.blockLayout">Block layout</label>
      <occurrences minimum="0" maximum="1"/>
      <config>
        <option value="narrow" i18n="mixin.blocks-config.blockLayout.narrow">Narrow</option>
        <option value="wide" i18n="mixin.blocks-config.blockLayout.wide">Wide</option>
      </config>
      <default>narrow</default>
    </input>
  </form>
</mixin>
