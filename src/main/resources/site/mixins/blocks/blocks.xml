<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<mixin xmlns="urn:enonic:xp:model:1.0">
  <display-name i18n="mixin.blocks.displayName">Blocks</display-name>

  <form>
    <option-set name="blocks">
      <label i18n="mixin.blocks.blocks">Content blocks</label>
      <help-text i18n="mixin.blocks.blocks.helpText">Your page content is build by a sequence of blocks.</help-text>
      <occurrences minimum="0" maximum="0"/>

      <options minimum="1" maximum="1">
        <option name="blocks-text">
          <label i18n="mixin.blocks-text.displayName">Text</label>
          <help-text i18n="mixin.blocks-text.description">Rich text field that can contain lists and tables</help-text>
          <items>
            <mixin name="blocks-text" />
          </items>
        </option>

        <option name="blocks-images">
          <label i18n="mixin.blocks-images.displayName">Images</label>
          <help-text i18n="mixin.blocks-images.description">An image gallery or an image that can be expanded</help-text>
          <items>
            <mixin name="blocks-images" />
          </items>
        </option>

        <option name="blocks-factbox">
          <label i18n="mixin.blocks-factbox.displayName">Factbox</label>
          <help-text i18n="mixin.blocks-factbox.description">A box containing text that can have different background colors</help-text>
          <items>
            <mixin name="blocks-factbox" />
            <mixin name="blocks-theme" />
          </items>
        </option>

        <option name="blocks-accordion">
          <label i18n="mixin.blocks-accordion.displayName">Accordion</label>
          <help-text i18n="mixin.blocks-accordion.description">A list of expandable sections</help-text>
          <items>
            <mixin name="blocks-accordion" />
            <mixin name="blocks-theme" />
          </items>
        </option>

        <option name="blocks-cards">
          <label i18n="mixin.blocks-cards.displayName">Cards</label>
          <help-text i18n="mixin.blocks-cards.description">Cards can have a title, text, image and can link to content</help-text>
          <items>
            <mixin name="blocks-cards" />
          </items>
        </option>

        <option name="blocks-quote">
          <label i18n="mixin.blocks-quote.displayName">Quote</label>
          <help-text i18n="mixin.blocks-quote.description">A stylized quote with the image of the author</help-text>
          <items>
            <mixin name="blocks-quote" />
          </items>
        </option>

        <option name="blocks-reuse">
          <label i18n="mixin.blocks-reuse.displayName">Reuse</label>
          <help-text i18n="mixin.blocks-reuse.description">Reuse all blocks inside another content</help-text>
          <items>
            <mixin name="blocks-reuse" />
          </items>
        </option>
      </options>
    </option-set>
  </form>
</mixin>
