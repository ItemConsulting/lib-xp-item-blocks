<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<mixin xmlns="urn:enonic:xp:model:1.0">
  <display-name i18n="mixin.blocks-map.displayName">Map</display-name>
  <description i18n="mixin.blocks-map.description">An interactive map that can contain markers</description>

  <form>
    <input name="center" type="GeoPoint">
      <label>Center</label>
      <occurrences minimum="1" maximum="1"/>
      <default>59.912087,10.736717</default>
    </input>

    <input name="zoom" type="Long">
      <label i18n="mixin.blocks-map.zoom">Zoom</label>
      <occurrences minimum="1" maximum="1"/>
      <default>10</default>
    </input>

    <option-set name="markers">
      <label i18n="mixin.blocks-map.markers">Markers</label>
      <help-text i18n="mixin.blocks-map.markers.helpText">Add helpful markers to the page</help-text>
      <occurrences minimum="0" maximum="0"/>

      <options minimum="1" maximum="1">
        <option name="popup">
          <label i18n="mixin.blocks-map.markers.popup">Popup</label>
          <items>
            <input name="lngLat" type="GeoPoint">
              <label>Position</label>
              <occurrences minimum="1" maximum="1"/>
            </input>

            <input name="text" type="HtmlArea">
              <label i18n="mixin.blocks-map.markers.popup.text">Text</label>
              <occurrences minimum="0" maximum="1"/>
            </input>
          </items>
        </option>
      </options>
    </option-set>
  </form>
</mixin>
