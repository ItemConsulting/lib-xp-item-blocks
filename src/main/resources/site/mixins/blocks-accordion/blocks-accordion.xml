<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<mixin xmlns="urn:enonic:xp:model:1.0">
  <display-name i18n="mixin.blocks-accordion.displayName">Accordion</display-name>
  <description i18n="mixin.blocks-accordion.description">A list of expandable sections</description>

  <form>
    <input name="title" type="TextLine">
      <label i18n="mixin.blocks-accordion.title">Title</label>
      <occurrences minimum="0" maximum="1"/>
    </input>

    <item-set name="items">
      <label i18n="mixin.blocks-accordion.items">Accordion element</label>
      <occurrences minimum="1" maximum="0" />
      <items>
        <input name="title" type="TextLine">
          <label i18n="mixin.blocks-accordion.items.title">Title</label>
          <occurrences minimum="1" maximum="1"/>
        </input>

        <input name="text" type="HtmlArea">
          <label i18n="mixin.blocks-accordion.items.text">Text</label>
          <occurrences minimum="1" maximum="1"/>
          <config>
            <exclude>*</exclude>
            <include>Format | Bold Italic RemoveFormat | BulletedList NumberedList | Subscript Superscript Blockquote | SpecialChar Link Unlink Table Image Macro</include>
            <allowHeadings>h3</allowHeadings>
          </config>
        </input>
      </items>
    </item-set>
  </form>
</mixin>
