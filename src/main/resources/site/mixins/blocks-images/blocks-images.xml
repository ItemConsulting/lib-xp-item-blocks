<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<mixin xmlns="urn:enonic:xp:model:1.0">
  <display-name i18n="mixin.blocks-images.displayName">Images</display-name>
  <description i18n="mixin.blocks-images.description">An image gallery or an image that can be expanded</description>

  <form>
    <item-set name="items">
      <label i18n="mixin.blocks-images.image">Image</label>
      <occurrences minimum="1" maximum="0"/>

      <items>
        <input name="imageId" type="ImageSelector">
          <label i18n="mixin.blocks-images.image.image">Image</label>
          <occurrences minimum="1" maximum="1"/>
        </input>

        <input name="altText" type="TextLine">
          <label i18n="mixin.blocks-images.image.altText">Description of the image for visually impaired users (alt text)</label>
          <help-text i18n="mixin.blocks-images.altTextHelpText">Describe the image in context of the article</help-text>
          <occurrences minimum="1" maximum="1"/>
        </input>

        <input name="caption" type="TextLine">
          <label i18n="mixin.blocks-images.image.caption">Caption</label>
          <occurrences minimum="0" maximum="1"/>
        </input>
      </items>
    </item-set>
  </form>
</mixin>
