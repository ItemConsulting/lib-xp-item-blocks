<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<mixin xmlns="urn:enonic:xp:model:1.0">
  <display-name i18n="mixin.blocks-image-placement.displayName">Image Placement</display-name>
  <description i18n="mixin.blocks-image-placement.description">Configure where an image should appear on a card</description>

  <form>
    <input name="imageClass" type="RadioButton">
      <label i18n="mixin.blocks-image-placement.imageClass">Image placement</label>
      <occurrences minimum="1" maximum="1"/>
      <default>blocks-card--image-left</default>
      <config>
        <option value="blocks-card--image-left" i18n="mixin.blocks-image-placement.imageClass.left">Left</option>
        <option value="blocks-card--image-right" i18n="mixin.blocks-image-placement.imageClass.right">Right</option>
        <option value="blocks-card--image-top" i18n="mixin.blocks-image-placement.imageClass.top">Top</option>
        <option value="blocks-card--image-bottom" i18n="mixin.blocks-image-placement.imageClass.bottom">Bottom</option>
      </config>
    </input>
  </form>
</mixin>
