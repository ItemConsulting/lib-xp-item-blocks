<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<mixin xmlns="urn:enonic:xp:model:1.0">
  <display-name i18n="mixin.blocks-reuse.displayName">Reuse</display-name>
  <description i18n="mixin.blocks-reuse.description">Reuse all blocks inside another content</description>

  <form>
    <input name="contentId" type="ContentSelector">
      <label i18n="mixin.blocks-reuse.contentId">Include blocks from this content</label>
      <occurrences minimum="1" maximum="1"/>
    </input>
  </form>
</mixin>
