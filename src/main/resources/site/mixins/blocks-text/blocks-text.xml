<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<mixin xmlns="urn:enonic:xp:model:1.0">
  <display-name i18n="mixin.blocks-text.displayName">Text</display-name>
  <description i18n="mixin.blocks-text.description">Rich text field that can contain lists and tables</description>

  <form>
    <input name="title" type="TextLine">
      <label i18n="mixin.blocks-text.title">Title</label>
      <occurrences minimum="0" maximum="1"/>
    </input>

    <input name="text" type="HtmlArea">
      <label i18n="mixin.blocks-text.text">Text</label>
      <occurrences minimum="0" maximum="1"/>
      <config>
        <exclude>*</exclude>
        <include>Format | Bold Italic RemoveFormat | BulletedList NumberedList | Subscript Superscript | SpecialChar Link Unlink Table Image Macro</include>
        <allowHeadings>h3</allowHeadings>
      </config>
    </input>
  </form>
</mixin>
